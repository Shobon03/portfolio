---
import BaseLayout from '../layouts/BaseLayout.astro';

// Helper para link relativo
const homeLink = import.meta.env.BASE_URL;
---

<BaseLayout title="404: Not Found">
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center px-4">
    <h1 class="font-display text-9xl font-black text-brutal-black mb-4">404</h1>

    <p class="text-2xl font-bold mb-8 max-w-md">
        Página não encontrada.
    </p>

    <a href={homeLink} class="bg-brutal-purple text-white px-8 py-4 font-bold border-3 border-brutal-black shadow-hard hover:translate-x-0.5 hover:translate-y-0.5 hover:shadow-none transition-all uppercase tracking-wider">
      Voltar para o Início
    </a>
  </div>
</BaseLayout>
