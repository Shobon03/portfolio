---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { base } from '../../utils/url-helper';

const posts = (await getCollection('blog'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const title = 'Blog | Matheus.Dev';
const description = 'Artigos sobre desenvolvimento e retro gaming.';

const siteUrl = Astro.site || new URL(Astro.url.origin);

const jsonLd = {
  '@context': 'https://schema.org',
  '@type': 'CollectionPage',
  name: title,
  description: description,
  url: Astro.url.href,
  mainEntity: {
    '@type': 'ItemList',
    itemListElement: posts.map((post, index) => ({
      '@type': 'ListItem',
      position: index + 1,
      url: new URL(`${base}blog/${post.slug}`, siteUrl).href,
      name: post.data.title,
    })),
  },
};
---

<BaseLayout title={title} description={description} jsonLd={jsonLd}>
  <section class="py-12">
    <h1 class="font-display text-6xl font-black uppercase mb-12 border-b-3 border-brutal-black inline-block">
        Blog
    </h1>

    <div class="space-y-4">
      {posts.map((post) => (
        <a href={`${base}blog/${post.slug}`} class="block group">
          <article class="border-3 border-brutal-black p-6 bg-brutal-bg hover:bg-brutal-yellow hover:shadow-hard transition-all flex flex-col md:flex-row justify-between gap-4 items-start md:items-center group-hover:text-black">

            <div class="space-y-2">
              <div class="flex gap-2 flex-wrap">
                {post.data.tags.map((tag) => (
                  <span class="text-xs font-bold bg-brutal-black text-brutal-bg px-2 py-1 uppercase border border-transparent group-hover:border-black group-hover:bg-black group-hover:text-white
                 dark:group-hover:border-white dark:group-hover:bg-white dark:group-hover:text-black ansition-colors">
                    {tag}
                  </span>
                ))}
              </div>

              <h2 class="font-display text-3xl font-bold group-hover:underline decoration-4 underline-offset-4 decoration-black">
                {post.data.title}
              </h2>

              <p class="font-sans text-lg text-gray-600 dark:text-gray-400 font-medium max-w-2xl group-hover:text-black">
                {post.data.description}
              </p>
            </div>

            <div class="font-mono font-bold text-sm whitespace-nowrap border-l-2 border-brutal-black pl-4 md:pl-0 md:border-l-0 md:self-center text-gray-500 group-hover:text-black">
              {post.data.pubDate.toLocaleDateString('pt-BR')}
            </div>

          </article>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
